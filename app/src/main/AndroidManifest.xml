<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="polsl.pam.partyplanner">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PartyPlanner"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".FundsList"
            android:exported="false" />
        <activity
            android:name=".FundsListOwner"
            android:exported="false" />
        <activity
            android:name=".UserInfo"
            android:exported="false" />
        <activity
            android:name=".EventInvite"
            android:exported="false" />
        <activity
            android:name=".FriendInvite"
            android:exported="false" />
        <activity
            android:name=".GuestListOwner"
            android:exported="false" />
        <activity
            android:name=".GuestList"
            android:exported="false" />
        <activity
            android:name=".InviteGuests"
            android:exported="true" />
        <activity
            android:name=".AddFriend"
            android:exported="true" />
        <activity
            android:name=".EditEvent"
            android:exported="true" />
        <activity
            android:name=".EventInfo"
            android:exported="true" />
        <activity
            android:name=".Event"
            android:exported="true" />
        <activity
            android:name=".AddEvent"
            android:exported="true" />
        <activity
            android:name=".Profile"
            android:exported="true" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainPanel"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/title_activity_main_panel" />
        <activity
            android:name=".Login"
            android:exported="true" />
        <activity
            android:name=".SignUp"
            android:exported="true" />
    </application>

</manifest>