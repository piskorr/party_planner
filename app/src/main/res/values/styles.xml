<resources>

    <style name="Widget.Theme.PartyPlanner.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.PartyPlanner.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Theme.App" parent="Theme.MaterialComponents">
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/fredoka_one</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/primary_orange</item>
        <item name="colorOnPrimary">@color/secondary_black</item>
        <item name="colorOnSurface">@color/secondary_black</item>
        <item name="colorSurface">@color/background_blue</item>
    </style>

    <style name="ThemeFabShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>


    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="fontFamily">@font/fredoka_one</item>
<!--        <item name="colorSurface">@color/card_blue</item>-->
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/primary_orange</item>
        <item name="rippleColor">@color/primary_orange</item>
        <item name="android:textColor">@color/secondary_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/background_blue</item>
        <item name="android:textColor">@color/background_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>